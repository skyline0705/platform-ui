@import './variables.styl'
clearfix()
    &:before,
    &:after
        display table
        content ''
        line-height 0
    &:after
        clear both

text-ellipsis(max-width)
    max-width max-width
    white-space nowrap
    word-wrap normal
    overflow hidden
    text-overflow ellipsis
    display inline-block

mask(positionValue = fixed)
    position positionValue
    z-index global-zindex
    top 0
    right 0
    bottom 0
    left 0
    background rgba(0, 0, 0, .5)

hidden()
    opacity 0
    outline none
    position absolute
    margin 0
    visibility hidden
    left -99999px